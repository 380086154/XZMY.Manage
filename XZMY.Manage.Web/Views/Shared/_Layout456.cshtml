    <script type="text/javascript">

        var cookieName = 'menu_active_name_1';
        var html = $('#liTemplate').html();
        var localhostPath = '';

        var bindChild = function (data, id) {
            var li = [];
            $.each(data, function (index, item) {
                if (item.pId == id) {
                    li.push('<li class="nav-item" id="_ID_"><a onclick="redirect(\'_ID_\',\'_PID_\',\'_URL_\');" class="nav-link" href="javascript:void(0);"><span class="title">_NAME_</span></a></li>'
                        .replace(/_ID_/ig, item.id)
                        .replace('_URL_', item.Url)
                        .replace('_NAME_', item.name)
                        .replace(/_PID_/ig, id)
                        .replace(/-/ig, '_'));
                }
            });
            return li.join('');
        };

        var loadMenu = function () {
            var value = Cookies.get(cookieName);
            var idList = [];
            if (value != undefined) idList = value.split('|');

            //alert(value);

            $.ajax({
                type: 'POST',
                url: '/home/AjaxMenuList',
                dataType: 'JSON',
                success: function (result) {
                    if (result.success) {

                        var data = result.rows;
                        var li = [];

                        $.each(data, function(index, item) {

                            if (item.pId == '00000000-0000-0000-0000-000000000000') {
                                li.push(html.replace(/__ID__/ig, item.id.replace(/-/ig, '_'))
                                    .replace('__FONTICONSCLASS__', item.FontIconsClass)
                                    .replace('__NAME__', item.name)
                                    .replace('__LI__', bindChild(data, item.id)));
                            }
                        });

                        $(li.join('')).appendTo($('#ulMenu'));
                    } else {
                        showToast(3, '系统消息', result.message);//错误信息
                    }
                },
                complete: function () {
                    if (idList[0] != undefined && idList[0].length > 0) $('#' + idList[0]).addClass('active');
                    if (idList[1] != undefined && idList[1].length > 0) $('#' + idList[1]).addClass('active');
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    showToast(3, '系统消息', JSON.stringify(errorThrown));//错误信息
                },
                async: true
            });
        };

        var getLocalhost = function () {
            //获取当前网址，如： http://localhost:8083/uimcardprj/share/meun
            var curWwwPath = window.document.location.href;
            //获取主机地址之后的目录，如： uimcardprj/share/meun
            var pathName = window.document.location.pathname;
            var pos = curWwwPath.indexOf(pathName);
            //获取主机地址，如： http://localhost:8083
            var localhostPaht = curWwwPath.substring(0, pos);

            return localhostPaht;
        };

        var redirect = function (id, pid, url) {
            var v = id + '|' + pid;

            Cookies.get(cookieName, v, { path: "/", expires: 7 });
            //alert(v);   alert(url);

            if (localhostPath.length === 0){
                localhostPath = getLocalhost();
            }

            location.href = localhostPath + '/' + url;
        };

        jQuery(document).ready(function () {
            loadMenu();

            $('.exit,.dropdown-toggle').click(function () {
                bootbox.confirm("确定要退出吗？", function (result) {
