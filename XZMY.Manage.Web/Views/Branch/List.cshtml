@{
    Layout = "~/Views/Shared/_Layout456.cshtml";
    ViewBag.Title = "列表";
}
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/home/index">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="module">系统管理</span>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="action">分店管理</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<div class="mt-bootstrap-tables" style="margin-top:20px">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                @*<div class="portlet-title">
                        <div class="caption">
                            <span style="font-size: 25px;color: #000"></span>
                        </div>
                        <div class="actions">
                            <a class="btn btn-default" href="/CourseTemplate/Edit">
                                <i class="fa fa-plus"></i> 创建
                            </a>
                        </div>
                    </div>*@
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <form id="defaultForm" class="form-horizontal" method="post" novalidate="novalidate">
                        <div class="mt-checkbox-inline" style="margin-top: -37px">
                            <div class="pull-left" style="margin-top: 18px">
                                状态：
                                <select class="form-control input-inline" name="State" id="State">
                                    <option value="0">全部</option>
                                    <option value="1">启用</option>
                                    <option value="2">禁用</option>
                                </select>&nbsp;
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                    <table id="table-pagination" data-toggle="table" data-url="/Branch/AjaxList/"
                           data-height="526"
                           data-form-id="defaultForm"
                           data-show-refresh="true"
                           data-page-size="10"
                           data-page-list="[5, 10, 20, 50, 100, 200]"
                           data-search="true">
                        <thead>
                            <tr>
                                <th data-formatter="RowNumber" data-width="50">序号</th>
                                @*<th data-field="DataId">DataId</th>*@
                                <th data-field="Name">名称</th>
                                @*<th data-field="Value">关键值</th>*@
                                <th data-field="FromEmail">发件人</th>
                                <th data-field="ToEmail">收件人</th>
                                <th data-field="State">状态</th>
                                <th data-field="CreatedTime">时间</th>
                                <th data-formatter="opColumns" data-align="center">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var opColumns = function (value, row, index) {
        //<a onclick="deletelog(this)" href="javascript:void(0)" id="_id_">删除</a> | 
        return '<a href="details/_id_">查看</a>'.replace(/_id_/ig, row.DataId);//
    };
</script>