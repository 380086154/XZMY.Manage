                <!-- BEGIN FORM-->
                <form id="defaultForm" class="form-horizontal" method="post" novalidate="novalidate">
                    <div class="mt-checkbox-inline" style="margin-top: -37px">
                        @if (ViewBag.IsAdmin)
                        {
                        <div class="pull-left" style="margin-top: 20px">
                            分店：
                            <select class="form-control input-inline" name="BranchDataId" id="BranchDataId">
                                <option value="00000000-0000-0000-0000-000000000000">全部</option>
                                @if (ViewBag.BranchList != null)
                                    {
                                        foreach (var item in ViewBag.BranchList)
                                        {
                                    <option value="@item.DataId">@item.Name</option>
                                        }
                                    }
                            </select>
                        </div>
                        }
                        <div class="row pull-left" style="margin-top: 18px">
                            <div class="col-md-12 col-sm-12">
                                <div style="display: inline-flex;">
                                    <label class="control-label">&nbsp;时间范围：</label>
                                    <div class="input-group input-large date-picker input-daterange" style="width: 120%;" data-date="2016-07-19" data-date-format="yyyy-mm-dd">
                                        <input type="text" class="form-control" name="CreatedTimeRange" value="" required>
                                        <span class="input-group-addon"> 到 </span>
                                        <input type="text" class="form-control" name="CreatedTimeRange" value="" required>
                                    </div>&nbsp;
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
                <table id="table-pagination" data-toggle="table" data-url="/Hyxx/AjaxPaymentList/"
                       data-height="523"
                       data-form-id="defaultForm"
                       data-show-refresh="true"
                       data-page-size="10"
                       data-page-list="[5, 10, 20, 50, 100, 200]"
                       data-auto-height="true"
                       data-search="true">
                    <thead>
                        <tr>
                            <th data-formatter="RowNumber" data-width="50">序号</th>
                            <th data-field="xfrq">日期</th>
                            <th data-field="xfje">消费金额</th>
                            <th data-field="Balance">余额</th>
                            @*<th data-formatter="showLevel" data-field="Level">积分</th>*@
                            <th data-field="bz">备注</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

    @section Style{
        <style>
            .background-color {
                background-color: #ecfded !important;
            }

            .working-area .dropdown-toggle {
                height: 45px;
            }

            .working-area .search-lbl {
                padding: 0;
                width: 55px;
                font-size: 18px;
                font-weight: 600;
                margin-top: 9px;
            }
        </style>
        <link href="~/Content/Metronic4.5.6/global/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" type="text/css" />
    }

    @section JavaScript{
        <script src="~/Content/Metronic4.5.6/pages/scripts/components-bootstrap-select.min.js" type="text/javascript"></script>
    }
    <script type="text/javascript">
        var checkNumber = function (num) {
            return num > 9 ? num : '0' + num;
        };

        //突出显示当天消费信息
        $('#table-pagination').bootstrapTable({
            rowStyle: function (row, index) {
                var d = new Date();
                var date = (d.getFullYear() + '-' + checkNumber(d.getMonth() + 1) + '-' + checkNumber(d.getDate()));

                var reg = /\/Date\(([-]?\d+)\)\//gi;
                var value = '';
                if (reg.test(row.xfrq)) {
                    var msec = row.xfrq.toString().replace(reg, "$1");
                    value = new Date(parseInt(msec)).Format('yyyy-MM-dd hh:mm:ss');
                }

                if (value.indexOf(date) != -1) {
                    return { classes: 'background-color' };
                }
                return {};
            }
        });

        $('.bs-searchbox input').keyup(function () {
            $.ajax({
                type: 'POST',
                url: '/Home/GetKeywords',
                data: $('.bs-searchbox input').val(),
                dataType: 'JSON',
                success: function (result) {
                    if (result.success) {
                        console.log(JSON.stringify( result.rows));
                    } else {
                        //$('.alert-danger', $('.login-form')).text(result.errors).show();
                        showToast(3, '系统消息', '请稍后重试');
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    showToast(3, '系统消息', JSON.stringify(errorThrown));//错误信息
                    //alert(JSON.stringify(errorThrown));
                },
                async: false
            });
        });
    </script>
