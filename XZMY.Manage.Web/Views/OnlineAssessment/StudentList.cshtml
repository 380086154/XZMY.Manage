@{
    Layout = "~/Views/Shared/_Layout456.cshtml";
    ViewBag.Title = "学生列表";
}
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/home/index">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="module">在线评估</span>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="action">学生列表</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<div class="mt-bootstrap-tables" style="margin-top:20px">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                        <div class="caption">
                        <span style="font-size: 25px;color: #000"></span>
                        </div>
                        <div class="actions">
                            <a class="btn btn-default" href="/OnlineAssessment/StudentEdit">
                                <i class="fa fa-plus"></i> 创建
                            </a>
                        </div>
                    </div>
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <form id="defaultForm" class="form-horizontal" method="post" novalidate="novalidate">
                        <div class="mt-checkbox-inline" style="margin-top: -37px">
                            <div class="pull-left" style="margin-top: 20px">
                                状态：
                                <select id="State" name="State" class="form-control input-inline">
                                    <option value="1" selected="selected">启用</option>
                                    <option value="2">禁用</option>
                                </select>
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                    <table id="table-pagination" data-toggle="table" data-url="/OnlineAssessment/StudentAjaxList/"
                           data-height="526"
                           data-form-id="defaultForm"
                           data-show-refresh="true"
                           data-page-size="10"
                           data-page-list="[5, 10, 20, 50, 100, 200]"
                           data-search="true">
                        <thead>
                            <tr>
                                <th data-field="Name">姓名</th>
                                <th data-field="LoginName">登录名</th>
                                <th data-field="StateName">状态</th>
                                <th data-field="CreatedTime" data-align="center" data-format="yyyy-MM-dd">注册时间</th>
                                <th data-formatter="opColumns" data-align="center">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section JavaScript{
    <script type="text/javascript">
        var opColumns = function (value, row, index) {
            return '<a href="/OnlineAssessment/StudentEdit/_id_">编辑</a> '.replace(/_id_/ig, row.Id);
        };
    </script>
}