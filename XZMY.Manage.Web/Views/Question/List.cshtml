@section JavaScript{
    <script type="text/javascript">
        var opColumns = function (value, row, index) {
            return '<a href="answer/_id_">查看</a>'.replace(/_id_/ig, row.Id);
        }; 
        var opSubColums = function (value, row, index) {
            var str = value;

            if (value.length > 20) {
                str = value.substr(0, 20) + '...';
            }

            return "<span title=\"" + value + "\">" + str + "</span>";

        }
    </script>
}