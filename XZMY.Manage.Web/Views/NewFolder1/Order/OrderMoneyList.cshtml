@{
    Layout = "~/Views/Shared/_Layout456.cshtml";
    ViewBag.Title = "账目列表";
}
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/home/index">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="module">账目管理</span>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="action">账目列表</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<div class="mt-bootstrap-tables" style="margin-top:20px">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <span style="font-size: 25px;color: #000"></span>
                    </div>
                    <div class="actions">
                        @*<a class="btn btn-circle btn-icon-only btn-default" href="javascript:;"><i class="icon-cloud-upload"></i></a>*@
                        @*<a class="btn btn-default" href="/Agent/Edit">
                            <i class="fa fa-plus"></i> 创建
                        </a>*@
                        @*<a class="btn btn-circle btn-icon-only btn-default" href="javascript:;"><i class="icon-wrench"></i></a>
                            <a class="btn btn-circle btn-icon-only btn-default delete" href="javascript:;"><i class="icon-trash"></i></a>*@
                    </div>
                </div>
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <form id="defaultForm" class="form-horizontal" method="post" novalidate="novalidate">
                        <div class="mt-checkbox-inline" style="margin-top: -37px">
                            <div class="pull-left" style="margin-top: 20px">
                                @*报名类型：<select class="form-control input-inline" name="Type" id="Type">
                                        <option value="0">全部</option>
                                        <option value="1">活动</option>
                                        <option value="2">课程</option>
                                    </select>*@
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                    <table id="table-pagination" data-toggle="table" data-url="/Order/AjaxOrderMoneyList/"
                           data-height="526"
                           data-form-id="defaultForm"
                           data-show-refresh="true"
                           data-page-size="10"
                           data-page-list="[5, 10, 20, 50, 100, 200]"
                           data-search="true">
                        <thead>
                            <tr>
                                <th data-field="SerialNumber">交易流水号</th>
                                <th data-field="PayTime">支付时间</th>
                                <th data-field="PayName">支付人姓名</th>
                                <th data-field="PayTypeName">支付类型</th>
                                <th data-field="PayModeName">支付方式</th>
                                <th data-field="PayPrice">支付金额</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section JavaScript{
    <script type="text/javascript">
        var opColumns = function (value, row, index) {
            return '<a href="edit/_id_">编辑</a> | <a href="details/_id_">查看</a>'.replace(/_id_/ig, row.Id);
        };
    </script>
}