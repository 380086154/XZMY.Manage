@model XZMY.Manage.Model.ViewModel.Planners.VmPlannerEdit
@{
    Layout = "~/Views/Shared/_Layout456.cshtml";
    ViewBag.Title = "学生申请VIP列表";
}
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/home/index">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="module">规划师</span>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="action">学生申请VIP列表</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<div class="mt-bootstrap-tables" style="margin-top:20px">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-social-dribbble font-green hide"></i>
                        @*<span class="caption-subject font-dark bold uppercase">Table Pagination</span>*@
                    </div>
                    <div class="actions">
                        @*<a class="btn btn-circle btn-icon-only btn-default" href="javascript:;"><i class="icon-cloud-upload"></i></a>*@
                        @*<a class="btn btn-default" href="/ProjectTemplate/Edit/">
                            <i class="fa fa-plus"></i> 创建
                        </a>*@
                        @*<a class="btn btn-circle btn-icon-only btn-default" href="javascript:;"><i class="icon-wrench"></i></a>
                            <a class="btn btn-circle btn-icon-only btn-default delete" href="javascript:;"><i class="icon-trash"></i></a>*@
                    </div>
                </div>
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <form id="defaultForm" class="form-horizontal" method="post" novalidate="novalidate">
                        @Html.HiddenFor(x=>x.Id)
                        <input type="hidden" name="PlannerId" value="@Model.DataId"/>
                        <div class="mt-checkbox-inline" style="margin-top: -37px">
                            <div class="pull-left" style="margin-top: 20px">
                                @*状态：<select class="form-control input-inline" name="State" id="State">
                                        <option value="0">全部</option>
                                        <option value="1">启用</option>
                                        <option value="2">禁用</option>
                                    </select>*@
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                    <table id="table-pagination" data-toggle="table" data-url="/Vip/AjaxStudentVipApplyList/"
                           data-height="400"
                           data-form-id="defaultForm"
                           data-show-refresh="true"
                           data-page-size="5"
                           data-page-list="[5, 10, 20, 50, 100, 200]"
                           data-search="true">
                        <thead>
                            <tr>
                                <th data-field="StudentName">申请学生</th>
                                <th data-field="PlannerName">目标规划师</th>
                                <th data-field="ApplyTime" >申请VIP时间</th>
                                <th data-field="StateName">状态</th>
                                <th data-formatter="opColumns" data-align="center">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section JavaScript{
    <script type="text/javascript">
        var opColumns = function (value, row, index) {
            return '<a href="/Vip/StudentVipApplyDetails/_id_">查看</a>'.replace(/_id_/ig, row.Id);
        };
    </script>
}