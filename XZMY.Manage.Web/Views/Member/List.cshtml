@{
    Layout = "~/Views/Shared/_Layout456.cshtml";
    ViewBag.Title = "客户列表";
}
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/home/index">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="module">客户管理</span>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="action">客户列表</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<div class="mt-bootstrap-tables" style="margin-top:20px">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                                <div class="portlet-title">
            <div class="caption">
            <span style="font-size: 25px;color: #000"></span>
            </div>
            <div class="actions">
                <a class="btn btn-default" href="/Member/Edit/">
                    <i class="fa fa-plus"></i> 创建新账号
                </a>
            </div>
        </div>
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <form id="defaultForm" class="form-horizontal" method="post" novalidate="novalidate">
                        <div class="mt-checkbox-inline" style="margin-top: -37px">
                            <div class="pull-left" style="margin-top: 20px">
                                状态：
                                <select id="State" name="State" class="form-control input-inline">
                                    <option value="0">全部</option>
                                    <option value="1" selected="selected">启用</option>
                                    <option value="2">禁用</option>
                                </select>
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                    <table id="table-pagination" data-toggle="table" data-url="/Member/AjaxList/"
                           data-height="526"
                           data-form-id="defaultForm"
                           data-show-refresh="true"
                           data-page-size="10"
                           data-page-list="[5, 10, 20, 50, 100, 200]"
                           data-search="true">
                        <thead>
                            <tr>
                                <th data-field="LoginName">登录名</th>
                                <th data-field="RealName">真实姓名</th>
                                <th data-field="Mobile">手机号</th>
                                <th data-field="TypeName" data-align="center">角色</th>
                                <th data-field="GenderName" data-align="center">性别</th>
                                <th data-field="StateName" data-align="center">状态</th>
                                <th data-field="RegisteredTime" data-align="center" data-format="yyyy-MM-dd">注册时间</th>
                                <th data-formatter="opColumns" data-align="center">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section JavaScript{
    <script type="text/javascript">
        var opColumns = function (value, row, index) {
            return '<a href="edit/_id_">编辑</a> | <a href="details/_id_">查看</a>'.replace(/_id_/ig, row.Id);
        };
    </script>
}