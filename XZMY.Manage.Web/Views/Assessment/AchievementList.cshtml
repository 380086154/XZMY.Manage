@{
    Layout = "~/Views/Shared/_Layout456.cshtml";
    ViewBag.Title = "评估成绩单";
}
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/home/index">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="module">评估中心</span>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span id="action">评估成绩单</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<div class="mt-bootstrap-tables" style="margin-top:20px">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <form id="defaultForm" class="form-horizontal" method="post" novalidate="novalidate">
                        <div class="mt-checkbox-inline" style="margin-top: -37px">
                            <div class="pull-left" style="margin-top: 20px">
                                @*状态：
                                    <select class="form-control input-inline" name="State" id="State">
                                        <option value="0">全部</option>
                                        <option value="1">启用</option>
                                        <option value="2">禁用</option>
                                    </select>*@
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                    <table id="table-pagination" data-toggle="table" data-url="/Vip/AjaxPlanRecordList/"
                           data-height="526"
                           data-show-refresh="true"
                           data-page-size="10"
                           data-page-list="[5, 10, 20, 50, 100, 200]"
                           data-search="true"
                           data-query-params="postQueryParams">
                        <thead>
                            <tr>
                                <th data-field="PlanTime" data-align="center">评估时间</th>
                                <th data-field="StudentName" data-align="center">学生姓名</th>
                                <th data-field="EnglishScore" data-align="right">英语成绩</th>
                                <th data-field="LearnScore" data-align="right">学科成绩</th>
                                <th data-field="QualityScore" data-align="right">素质成绩</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section JavaScript{
    <script type="text/javascript">
        var postQueryParams = function (params) {
            params.limit = 5;
            //console.log(JSON.stringify(params));
            // {"limit":10,"offset":0,"order":"asc","your_param1":1,"your_param2":2}
            return params; // body data
        };

        var opColumns = function (value, row, index) {
            return '<a href="edit/_id_">启用</a> | <a href="details/_id_">查看</a>'.replace(/_id_/ig, row.Id); //| <a href="details/_id_">角色</a>
        };
    </script>
}